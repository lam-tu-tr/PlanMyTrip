generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String     @id @unique @default(uuid())
  username    String     @unique
  password    String     @unique
  triplist    TripList[]
  dateCreated DateTime   @unique(sort: Desc) @default(now())

  @@unique([username, password])
}

model TripList {
  id String @id @unique @default(uuid())

  tripId      String   @unique @default(uuid())
  userTrip    String
  user        User     @relation(fields: [userTrip], references: [username])
  aiMessage   String   @db.LongText
  destList    Json
  bbox        String
  startDate   String
  endDate     String
  dateCreated DateTime @unique(sort: Desc) @default(now())

  @@index([userTrip])
}
