// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  username String     @unique
  password String     @unique
  trip     TripList[]
}

model TripList {
  id String @id @default(uuid())

  userTrip String
  trip     User   @relation(fields: [userTrip], references: [id])

  prompt      String
  gpt_Result  String
  locations   String
  trip_Dates  String
  dateCreated DateTime @unique(sort: Desc) @default(now())
}
