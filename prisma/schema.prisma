// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String     @id @unique @default(uuid())
  username    String     @unique
  password    String     @unique
  trip        TripList[]
  dateCreated DateTime   @unique(sort: Desc) @default(now())

  @@unique([username, password])
}

model TripList {
  id String @id @unique @default(uuid())

  userTrip       String
  trip           User     @relation(fields: [userTrip], references: [username])
  messagePayload Json
  aiMessage      String
  destList       Json
  bbox           String
  startDate      DateTime
  endDate        DateTime
  dateCreated    DateTime @unique(sort: Desc) @default(now())

  @@index([userTrip])
}
